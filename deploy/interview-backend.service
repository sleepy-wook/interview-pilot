[Unit]
Description=Interview Pilot Backend (FastAPI)
After=network.target

[Service]
Type=simple
User=ec2-user
WorkingDirectory=/opt/interview-pilot/backend
EnvironmentFile=/opt/interview-pilot/backend/.env
ExecStart=/opt/interview-pilot/backend/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
