# AWS (Named Profile — credentials are in ~/.aws/credentials)
AWS_PROFILE=interview-pilot
AWS_REGION=us-east-1

# Bedrock Models
BEDROCK_MODEL_HAIKU=us.anthropic.claude-haiku-4-5-20251001-v1:0
BEDROCK_MODEL_SONNET=us.anthropic.claude-sonnet-4-6-20250514-v1:0

# Database (RDS PostgreSQL)
DATABASE_URL=postgresql://user:pass@localhost:5432/interview_pilot

# S3
S3_BUCKET=interview-pilot-uploads

# Amazon Transcribe
TRANSCRIBE_LANGUAGE_CODE=en-US

# Web Search API (Google Custom Search — 100 queries/day free)
GOOGLE_CSE_API_KEY=
GOOGLE_CSE_ID=

# App
APP_ENV=development
APP_PASSWORD=          # If set, require this password for all API access (leave empty for open access)
FRONTEND_URL=http://localhost:3000
